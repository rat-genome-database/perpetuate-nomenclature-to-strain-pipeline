<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/> -->
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %msg%n"/>
        </Console>

        <RollingFile name="status" append="true" fileName="logs/process.log" filePattern="logs/process.log.%d{yyyy-MM}">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <File name="summary" append="false" fileName="logs/summary.log">
            <PatternLayout pattern="%m%n"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </File>
        <RollingFile name="detail" append="true" fileName="logs/root.log" filePattern="logs/root.log.%d{yyyy-MM}">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>

        <RollingFile name="conflicts" append="true" fileName="logs/conflicts.log" filePattern="logs/conflicts.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="updates" append="true" fileName="logs/updates.log" filePattern="logs/updates.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="exceptions" append="true" fileName="logs/exceptions.log" filePattern="logs/exceptions.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <!-- daily -->
        <Logger name="status" level="debug" additivity="false">
            <AppenderRef ref="status" level="info"/>
            <AppenderRef ref="summary" level="info"/><!-- human readable -->
            <AppenderRef ref="detail"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>

        <!-- monthly -->
        <Logger name="conflicts" level="debug" additivity="false">
            <AppenderRef ref="conflicts"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="updates" level="debug" additivity="false">
            <AppenderRef ref="updates"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="exceptions" level="debug" additivity="false">
            <AppenderRef ref="exceptions"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
    </Loggers>
</Configuration>